{
  "extends": ["next/core-web-vitals", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "no-console": "error",
    "indent": ["error", 2],
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-single"],
    "@typescript-eslint/no-explicit-any": "error", 
    "no-debugger": "error",
    "no-warning-comments": "error"
  }
}
